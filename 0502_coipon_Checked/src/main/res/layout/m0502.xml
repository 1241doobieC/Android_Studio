<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beach"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <TextView
            android:id="@+id/m0502_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0502_t001"
            android:textColor="@color/Navy"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/m0502_r001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/m0502_r001a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:buttonTint="@color/Red"
                android:checked="true"
                android:text="@string/m0502_r001a"
                android:textColor="@color/Black"
                android:textColorLink="#3F51B5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/m0502_r001b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:buttonTint="@color/Red"
                android:text="@string/m0502_a001b"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RadioGroup>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <TextView
            android:id="@+id/m0502_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0502_t002"
            android:textColor="@color/Navy"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/m0502_r002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light">

            <RadioButton
                android:id="@+id/m0502_r002a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Red"
                android:buttonTint="@color/White"
                android:checked="true"
                android:text="@string/m0502_r002a"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/m0502_r002b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Red"
                android:buttonTint="@color/White"
                android:text="@string/m0502_r002b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/m0502_r002c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Red"
                android:buttonTint="@color/White"
                android:text="@string/m0502_r002c"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>
    </TableRow>

    <Button
        android:id="@+id/m0502_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0502_b001"
        android:textColor="@color/Navy"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin">

        <TextView
            android:id="@+id/m0502_t003"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0502_t003"
            android:textColor="@color/Navy"
            android:textSize="22sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin">

        <TextView
            android:id="@+id/m0502_f000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m0502_f000"
            android:textColor="@color/Yellow"
            android:textSize="24sp"
            android:textStyle="bold" />
    </TableRow>

    <TextView
        android:id="@+id/myName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50"
        android:gravity="end"
        android:text="@string/myName"
        android:textColor="@color/Purple"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>